---
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Scopion - Single-binary observability tool" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<!-- Google Fonts: Inter -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
	</head>
	<body class="bg-page text-white antialiased overflow-x-hidden">
		<!-- Background Grid Effect -->
		<div class="fixed inset-0 z-[-1] bg-size-[50px_50px] bg-grid-pattern opacity-[0.05] pointer-events-none"></div>
		
		<slot />
	</body>
</html>

<style is:global>
	/* Custom scrollbar for that tech feel */
	::-webkit-scrollbar {
		width: 10px;
	}
	::-webkit-scrollbar-track {
		background: #05050A;
	}
	::-webkit-scrollbar-thumb {
		background: #1f1f2e;
		border-radius: 5px;
	}
	::-webkit-scrollbar-thumb:hover {
		background: #2d2d3d;
	}
</style>
