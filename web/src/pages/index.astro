---
import Layout from './layout.astro';
import Mascot from '../components/mascot.astro';
import Navbar from '../components/navbar.astro';
---

<Layout title="Scopion | Observability Made Simple">
	<Navbar />

	<main class="relative pt-32 pb-20 overflow-hidden">
		
		<!-- Floating Socials (Right Side) -->
		<div class="hidden lg:flex flex-col gap-4 fixed right-8 top-1/2 -translate-y-1/2 z-40">
			<a href="#" class="p-3 rounded-full bg-card border border-white/5 text-gray-400 hover:text-white hover:border-primary/50 transition-all">
				<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.03 1.531 1.03.892 1.529 2.341 1.087 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" /></svg>
			</a>
		</div>

		<!-- HERO SECTION -->
		<section class="relative z-10 max-w-7xl mx-auto px-6 flex flex-col items-center text-center">
			
			<!-- Pill Label -->
			<div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-white/5 border border-white/10 mb-8 animate-fade-in-up">
				<span class="text-xs font-bold text-transparent bg-clip-text bg-linear-to-r from-primary to-accent">NEW</span>
				<span class="text-xs text-gray-300">Single-Binary Architecture v1.0.0</span>
				<span class="w-4 h-4 rounded-full bg-white/10 flex items-center justify-center text-[10px] text-gray-400">&gt;</span>
			</div>

			<!-- Headline -->
			<h1 class="text-5xl md:text-7xl font-bold tracking-tight mb-6">
				<span class="block text-white mb-2">Observability</span>
				<span class="text-transparent bg-clip-text bg-linear-to-r from-primary via-purple-400 to-white">
					Made Simple.
				</span>
			</h1>

			<!-- Subheadline -->
			<p class="max-w-2xl text-lg text-gray-400 mb-10 leading-relaxed">
				Ingest, store, and visualize events and traces from your applications.
				A single-binary tool with embedded SQLite and a modern dashboard.
			</p>

			<!-- Buttons -->
			<div class="flex flex-col sm:flex-row gap-4 mb-20">
				<a href="#install" class="px-8 py-4 rounded-full bg-linear-to-r from-primary to-blue-600 text-white font-semibold shadow-[0_0_20px_rgba(139,92,246,0.5)] hover:shadow-[0_0_30px_rgba(139,92,246,0.7)] transition-all transform hover:-translate-y-1">
					Download Binary
				</a>
				<a href="https://github.com/xonoxc/scopion" target="_blank" class="px-8 py-4 rounded-full bg-white/5 border border-white/10 text-white font-semibold hover:bg-white/10 transition-all">
					View on GitHub
				</a>
			</div>

			<!-- Visual Feature Card (Floating) -->
			<div class="relative w-full max-w-4xl mx-auto perspective-1000">
				<!-- Glow behind card -->
				<div class="absolute inset-0 bg-linear-to-t from-primary/20 to-transparent blur-3xl -z-10 transform translate-y-10"></div>
				
				<div class="relative bg-[#0F0F16] border border-white/10 rounded-2xl overflow-hidden shadow-2xl">
					<!-- Fake Browser Header -->
					<div class="h-8 bg-black/50 border-b border-white/5 flex items-center px-4 gap-2">
						<div class="w-3 h-3 rounded-full bg-red-500/20"></div>
						<div class="w-3 h-3 rounded-full bg-yellow-500/20"></div>
						<div class="w-3 h-3 rounded-full bg-green-500/20"></div>
						<div class="ml-4 px-3 py-0.5 rounded-full bg-white/5 text-[10px] text-gray-500 font-mono">localhost:8080</div>
					</div>

					<!-- Content Split -->
					<div class="flex flex-col md:flex-row h-100">
						<!-- Left: Visualization/Mascot -->
						<div class="w-full md:w-1/3 bg-linear-to-b from-white/5 to-transparent p-8 flex flex-col items-center justify-center relative overflow-hidden">
							<div class="absolute top-0 left-0 w-full h-full opacity-20 bg-[url('https://grainy-gradients.vercel.app/noise.svg')]"></div>
							<Mascot class="w-48 h-48 drop-shadow-2xl z-10" />
							<div class="mt-6 text-center z-10">
								<h3 class="font-bold text-white text-xl">Scopion UI</h3>
								<p class="text-sm text-gray-400 mt-1">Real-time Visualization</p>
							</div>
						</div>

						<!-- Right: Stats / Fake UI -->
						<div class="w-full md:w-2/3 p-6 grid grid-cols-2 gap-4 content-start">
							<!-- Stat Card 1 -->
							<div class="bg-white/5 rounded-lg p-4 border border-white/5">
								<div class="text-xs text-gray-400 uppercase">Events / Sec</div>
								<div class="text-2xl font-bold text-white mt-1">1,240</div>
								<div class="h-1 w-full bg-gray-700 mt-3 rounded-full overflow-hidden">
									<div class="h-full bg-green-500 w-[70%]"></div>
								</div>
							</div>
							<!-- Stat Card 2 -->
							<div class="bg-white/5 rounded-lg p-4 border border-white/5">
								<div class="text-xs text-gray-400 uppercase">Active Traces</div>
								<div class="text-2xl font-bold text-white mt-1">85</div>
								<div class="h-1 w-full bg-gray-700 mt-3 rounded-full overflow-hidden">
									<div class="h-full bg-primary w-[40%]"></div>
								</div>
							</div>
							<!-- Code Snippet -->
							<div class="col-span-2 bg-black/50 rounded-lg p-4 font-mono text-xs text-gray-400 border border-white/5">
								<div class="flex justify-between mb-2">
									<span class="text-primary">GET /api/traces</span>
									<span class="text-green-400">200 OK</span>
								</div>
								<div class="opacity-50">
									{`{ "trace_id": "a1b2...", "duration": "45ms" }`}
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- FEATURES GRID -->
		<section id="features" class="max-w-7xl mx-auto px-6 py-32">
			<h2 class="text-3xl font-bold text-center mb-16">Everything you need in one binary</h2>
			
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
				{[
					{
						title: "Single-Binary Deployment",
						desc: "Self-contained executable with embedded web interface for easy distribution.",
						icon: "ðŸ“¦"
					},
					{
						title: "Real-time Monitoring",
						desc: "Dashboard for viewing live events, traces, and system metrics via SSE.",
						icon: "âš¡"
					},
					{
						title: "SQLite Storage",
						desc: "Built-in database requires no external setup. Just run and store.",
						icon: "ðŸ’¾"
					},
					{
						title: "REST API",
						desc: "Simple endpoint for receiving telemetry data from any application.",
						icon: "ðŸ”Œ"
					},
					{
						title: "Demo Mode",
						desc: "Optional sample data generation for instant testing and demos.",
						icon: "ðŸŽ®"
					},
					{
						title: "Modern Stack",
						desc: "Built with Go 1.25+ and React/Vite for performance and speed.",
						icon: "ðŸš€"
					}
				].map(feature => (
					<div class="group p-6 rounded-2xl bg-card border border-white/5 hover:border-primary/50 hover:bg-white/5 transition-all duration-300">
						<div class="w-12 h-12 rounded-full bg-white/5 flex items-center justify-center text-2xl mb-4 group-hover:scale-110 transition-transform">
							{feature.icon}
						</div>
						<h3 class="text-xl font-semibold mb-2 text-white">{feature.title}</h3>
						<p class="text-gray-400 text-sm leading-relaxed">{feature.desc}</p>
					</div>
				))}
			</div>
		</section>

		<!-- INSTALLATION / TECH STACK -->
		<section id="install" class="max-w-5xl mx-auto px-6 py-20">
			<div class="bg-card border border-white/10 rounded-3xl p-8 md:p-12 overflow-hidden relative">
				<div class="absolute top-0 right-0 p-32 bg-primary/20 blur-[100px] rounded-full"></div>
				
				<div class="grid md:grid-cols-2 gap-12 relative z-10">
					<div>
						<h2 class="text-3xl font-bold mb-6">Get Started</h2>
						<p class="text-gray-400 mb-8">
							Clone the repository and build the binary. You need Go 1.25.5+ and Node.js installed.
						</p>

						<div class="space-y-6">
							<div>
								<h4 class="text-sm font-semibold text-white mb-2">1. Clone & Install</h4>
								<div class="bg-black/50 rounded-lg p-4 font-mono text-sm text-gray-300 border border-white/10 overflow-x-auto">
									<p class="mb-2"><span class="text-primary">$</span> git clone https://github.com/xonoxc/scopion.git</p>
									<p class="mb-2"><span class="text-primary">$</span> cd scopion</p>
									<p><span class="text-primary">$</span> go mod tidy</p>
								</div>
							</div>
							
							<div>
								<h4 class="text-sm font-semibold text-white mb-2">2. Build & Run</h4>
								<div class="bg-black/50 rounded-lg p-4 font-mono text-sm text-gray-300 border border-white/10 overflow-x-auto">
									<p class="mb-2"><span class="text-primary">$</span> make build</p>
									<p><span class="text-primary">$</span> ./bin/scopion start</p>
								</div>
							</div>
						</div>
					</div>

					<div class="flex flex-col justify-center">
						<h3 class="text-xl font-bold mb-6">Technology Stack</h3>
						<div class="space-y-4">
							<div class="flex items-center justify-between p-4 rounded-xl bg-white/5 border border-white/5">
								<span class="text-gray-300">Backend</span>
								<span class="font-mono text-primary text-sm">Go, SQLite, SSE</span>
							</div>
							<div class="flex items-center justify-between p-4 rounded-xl bg-white/5 border border-white/5">
								<span class="text-gray-300">Frontend</span>
								<span class="font-mono text-primary text-sm">React, TS, Vite, Zustand</span>
							</div>
							<div class="flex items-center justify-between p-4 rounded-xl bg-white/5 border border-white/5">
								<span class="text-gray-300">Styling</span>
								<span class="font-mono text-primary text-sm">Tailwind CSS</span>
							</div>
						</div>
						
						<div class="mt-8 p-4 rounded-xl bg-linear-to-r from-primary/20 to-purple-900/20 border border-primary/20">
							<p class="text-sm text-gray-300 text-center">
								Currently v1.0.0 â€¢ Licensed under MIT
							</p>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- FOOTER -->
		<footer class="max-w-7xl mx-auto px-6 py-12 border-t border-white/5 text-center md:text-left flex flex-col md:flex-row justify-between items-center text-sm text-gray-500">
			<div class="flex items-center gap-2 mb-4 md:mb-0">
				<div class="w-5 h-5 opacity-50"><Mascot /></div>
				<span>&copy; 2024 Scopion. All rights reserved.</span>
			</div>
			<div class="flex gap-6">
				<a href="#" class="hover:text-white transition-colors">Documentation</a>
				<a href="#" class="hover:text-white transition-colors">Privacy</a>
				<a href="https://github.com/xonoxc/scopion" class="hover:text-white transition-colors">GitHub</a>
			</div>
		</footer>

	</main>
</Layout>
