<svg viewBox="0 0 200 200" fill="none" xmlns="http://www.w3.org/2000/svg" class={Astro.props.class}>
    <defs>
        <linearGradient id="scorpGradient" x1="0" y1="0" x2="200" y2="200">
            <stop offset="0%" stop-color="#8B5CF6" />
            <stop offset="100%" stop-color="#EC4899" />
        </linearGradient>
        <filter id="glow" x="-20%" y="-20%" width="140%" height="140%">
            <feGaussianBlur stdDeviation="5" result="blur" />
            <feComposite in="SourceGraphic" in2="blur" operator="over" />
        </filter>
    </defs>
    
    <!-- Body segments -->
    <path d="M100 130 C 80 130, 70 110, 70 90 C 70 70, 85 50, 100 50 C 115 50, 130 70, 130 90 C 130 110, 120 130, 100 130 Z" fill="url(#scorpGradient)" fill-opacity="0.2" stroke="url(#scorpGradient)" stroke-width="2"/>
    
    <!-- Claws (Pincers) -->
    <path d="M70 70 L 50 50 M 45 45 A 10 10 0 0 0 60 40" stroke="white" stroke-width="3" stroke-linecap="round"/>
    <path d="M130 70 L 150 50 M 155 45 A 10 10 0 0 1 140 40" stroke="white" stroke-width="3" stroke-linecap="round"/>

    <!-- Legs -->
    <path d="M70 90 L 50 95 M 70 100 L 55 110 M 75 110 L 60 125" stroke="white" stroke-width="1" opacity="0.5"/>
    <path d="M130 90 L 150 95 M 130 100 L 145 110 M 125 110 L 140 125" stroke="white" stroke-width="1" opacity="0.5"/>

    <!-- The Tail (Curving up) -->
    <path d="M100 130 Q 100 160, 130 150 T 160 110 T 140 70" stroke="url(#scorpGradient)" stroke-width="4" stroke-linecap="round" fill="none" filter="url(#glow)"/>

    <!-- The Telescope Stinger -->
    <g transform="translate(132, 62) rotate(-45)">
        <rect x="0" y="0" width="12" height="24" rx="2" fill="white"/>
        <circle cx="6" cy="0" r="4" fill="#8B5CF6"/> <!-- Lens -->
        <rect x="2" y="24" width="8" height="6" fill="#555"/>
    </g>
</svg>
